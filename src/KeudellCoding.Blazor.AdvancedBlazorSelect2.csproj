<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
    <Authors>KeudellCoding</Authors>
    <Product>Blazor.AdvancedBlazorSelect2</Product>
    <Copyright>MIT License</Copyright>
    <Description>Simple wrapper for Select2 with full support of databases and custom web APIs.</Description>
    <PackageProjectUrl>https://github.com/KeudellCoding/Blazor.AdvancedBlazorSelect2</PackageProjectUrl>
    <RepositoryUrl>https://github.com/KeudellCoding/Blazor.AdvancedBlazorSelect2</RepositoryUrl>
    <RepositoryType>Git Repository</RepositoryType>
    <PackageTags>select2;blazor;component;blazor-component;selector;html-select</PackageTags>
    <Version>1.2</Version>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.7" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.7" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="3.1.7" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>


</Project>
